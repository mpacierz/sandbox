{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es6"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
    },
    "include": [
        "src/**/*",
        "src/*"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}